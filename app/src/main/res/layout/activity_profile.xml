<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="rathore.gajendra.enigma.profile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:src="@drawable/header"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favourites\n -"
            android:padding="10dp"
            android:textSize="10dp"
            android:textAllCaps="true"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:textAlignment="center"
            android:id="@+id/textViewFav"
            android:layout_alignBaseline="@+id/textViewVisited"
            android:layout_alignBottom="@+id/textViewVisited"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textViewVisited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="131dp"
            android:textSize="10dp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_marginRight="131dp"
            android:layout_marginTop="194dp"
            android:padding="10dp"
            android:text="Visited\n -" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/ic_circle_filled"
        app:civ_border_color="#000000"
        app:civ_border_width="0.5dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="30"
        app:civ_shadow_color="#989898"
        android:id="@+id/profilePik"
        android:layout_alignTop="@+id/floatingActionButton" />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:id="@+id/floatingActionButton"
            android:layout_above="@+id/textViewFav"
            android:layout_alignRight="@+id/textViewFav"
            android:layout_alignEnd="@+id/textViewFav"
            android:layout_marginBottom="18dp" />
        <!--UPPER CONTENT FOR PROFILE PIK AND DETAILS-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9881029531"
            android:textSize="16dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="305dp"
            android:id="@+id/textViewContact"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="16dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="285dp" />
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="265dp" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/cardViewFav"
        android:layout_below="@+id/textViewContact">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#e2dfdf">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:text="Favourites"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"/>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:src="@drawable/bs_one"
                android:scaleType="fitXY"
                android:layout_marginRight="5dp"/>
            <ImageView
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:src="@drawable/bs"
                android:scaleType="fitXY"
                android:layout_marginRight="5dp"/>
            <ImageView
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:src="@drawable/bs_three"
                android:scaleType="fitXY"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#e2dfdf"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="VIEW ALL"
                android:textAllCaps="true"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/cardViewRecent"
            android:layout_below="@+id/cardViewFav">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#e2dfdf">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:text="RECENTLY VISITED"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/bs_one"
                        android:scaleType="fitXY"
                        android:layout_marginRight="5dp"/>
                    <ImageView
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/bs"
                        android:scaleType="fitXY"
                        android:layout_marginRight="5dp"/>
                    <ImageView
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/bs_three"
                        android:scaleType="fitXY"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#e2dfdf"
                android:layout_gravity="bottom">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="VIEW ALL"
                    android:textAllCaps="true"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
       
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>